{
  "name": "mmedia/usps-oauth-php",
  "description": "Modern PHP library for USPS OAuth 2.0 API - Shipping rates, labels, and tracking for the 2026+ API",
  "type": "library",
  "keywords": [
    "usps",
    "shipping",
    "oauth",
    "rates",
    "api",
    "ecommerce",
    "logistics"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "M Media Software Lab",
      "email": "info@mmediasoftwarelab.com",
      "homepage": "https://www.mmediasoftwarelab.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-curl": "*",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "MMedia\\USPS\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MMedia\\USPS\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=8",
    "phpcs": "phpcs src --standard=PSR12"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
